<% if (message && message.errors && Array.isArray(message.errors)) { %> 
  <% message.errors.forEach(error => { %>
    <div class="alert alert-danger mb-1 py-1">
      <strong>¡Error!</strong> <%= error %>
    </div>
  <% }) %> 
<% } %>

<% if (message && typeof message.success !== 'undefined' && Array.isArray(message.success)) { %> 
  <% message.success.forEach(archieve => { %>
    <div class="alert alert-success mb-1 py-1">
      <strong>¡Hecho!</strong> <%= archieve %>
    </div>
  <% }) %> 
<% } %>