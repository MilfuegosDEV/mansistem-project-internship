<script nonce="<%=cspNonce%>">
  function showEditModal(form, data) {
    const selectedStatus = $("#editStatus option")
      .filter(function () {
        return $(this).text().trim() === data.status;
      })
      .val();

    $("#id").val(data.id);
    $("#editInputName").val(data.model);
    $("#editClass option").val(data.className).text(data.className);
    $("#editDeviceSupplier option").val(data.supplier).text(data.supplier);
    $("#editType option").val(data.type).text(data.type);
    $("#editStatus").val(selectedStatus);
    $("#editarModal").modal("show");
  }
</script>
<script nonce="<%= cspNonce %>">
  $(document).ready(function () {
    const table = datatableConfig(
