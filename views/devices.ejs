          setTimeout(() => {
            messages.innerHTML = "";
            $("#editForm")[0].reset();
            $(`#editarModal`).modal("hide");
            $("#DataTable").DataTable().ajax.reload();
          }, 1000);
        },
        error: function (err) {
          const result = err.responseJSON;
          displayErrors(messages, result.errors);
          setTimeout(() => {
            messages.innerHTML = "";
          }, 5000);
        },
      });
    });
  });
</script>
<script nonce="<%= cspNonce %>">
  $(document).ready(function () {
    $("#deviceClass").on("change", function () {
      var selectedClass = $(this).val();

      $.ajax({
        url: "/api/devices/getByClass",
        type: "GET",
        data: { deviceClass: selectedClass },
        dataType: "json",
        success: function (response) {
          var typeSelect = $("#type");
          typeSelect.empty(); // Limpiar opciones anteriores

          $.each(response, function (index, value) {
            typeSelect.append(
              $("<option>", {
                value: value.id,
                text: value.name,
              })
            );
          });

          // Habilitar el select de tipo si hay opciones disponibles
          typeSelect.prop("disabled", response.length === 0);
        },
        error: function (xhr, status, error) {
          // Manejar errores aquí
          console.error("Error en la solicitud AJAX: " + error);
        },
      });
    });
  });
</script>
