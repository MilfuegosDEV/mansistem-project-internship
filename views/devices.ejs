<h1 class="mt-4">Dispositivos</h1>
<ol class="breadcrumb mb-4">
  <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
  <li class="breadcrumb-item active">Dispositivos</li>
</ol>
<div class="card mb-4">
  <div class="card-header">
    <i class="fa-solid fa-print me-1"></i>
    Dispositivos
  </div>
  <div class="card-body">
    <table
      id="DataTable"
      class="display responsive table table-hover wrap w-100 fs-6"
    ></table>
  </div>
</div>
<!-- crear clase -->
<div
  class="modal fade"
  id="crearModal"
  tabindex="-1"
  aria-labelledby="crearModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-md modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header d-block">
        <h5 class="modal-title mb-2" id="crearModalLabel">Nueva Dispositivo</h5>
        <div id="messageBox"></div>
      </div>
      <div class="modal-body">
        <form method="post" id="registerForm">
          <div class="row">
            <div class="col-12 mb-2 mb-md-3">
              <div class="form-floating">
                <input
                  class="form-control"
                  id="inputName"
                  type="text"
                  placeholder="Nombre"
                  name="name"
                  autocomplete="false"
                  required
                />
                <label for="inputName">Modelo</label>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12 mb-2 mb-md-3">
              <div class="form-floating">
                <select
                  class="form-select"
                  name="supplier"
                  id="supplier"
                  autocomplete="false"
                  required
                >
                  <option value="" disabled selected>
                    Seleccione una opción
                  </option>

                  <% deviceSupplier.forEach(value => { %>
                  <option value="<%= value.id %>"><%= value.name %></option>
                  <% }); %>
                </select>
                <label for="supplier">Proveedor</label>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-6 col-12 mb-2 mb-md-3">
              <div class="form-floating">
                <select
                  class="form-select"
                  name="deviceClass"
                  id="deviceClass"
                  autocomplete="false"
                  required
                >
                  <option value="" disabled selected>
                    Seleccione una opción
                  </option>

                  <% deviceClass.forEach(value => { %>
                  <option value="<%= value.id %>"><%= value.name %></option>
                  <% }); %>
                </select>
                <label for="deviceClass" class="form-label"
                  >Clase: (elige una):</label
                >
              </div>
            </div>
            <div class="col-sm-6 col-12 mb-2 mb-md-3">
              <div class="form-floating">
                <select
                  class="form-select"
                  name="type"
                  id="type"
                  autocomplete="false"
                  disabled
                >
                  <option value="" disabled selected>
                    Selecciona una clase
                  </option>
                </select>
                <label for="type" class="form-label">Tipo: (elige uno):</label>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">
          Cerrar
        </button>
        <button type="submit" class="btn btn-success" form="registerForm">
          Registrar
        </button>
      </div>
    </div>
  </div>
</div>

<!-- editar clase -->
<div
  class="modal fade"
  id="editarModal"
  tabindex="-1"
  aria-labelledby="editarModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-md modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header d-block">
        <h5 class="modal-title mb-2" id="editarModalLabel">Editar Clase</h5>
        <div id="editMessageBox"></div>
      </div>
      <div class="modal-body">
        <form method="post" id="editForm">
          <input type="text" id="id" name="id" class="d-none" />
          <div class="row">
            <div class="col-12 mb-2 mb-md-3">
              <div class="form-floating">
                <input
                  class="form-control"
                  id="editInputName"
                  type="text"
                  placeholder="Modelo"
                  name="name"
                  autocomplete="false"
                  disabled
                />
                <label for="editInputName">Modelo</label>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-4 col-12 mb-2 mb-md-3">
              <div class="form-floating">
                <select
                  class="form-select"
                  name="class"
                  id="editClass"
                  autocomplete="false"
                  disabled
                >
                  <option></option>
                </select>
                <label for="editClass">Clase</label>
              </div>
            </div>
            <div class="col-sm-4 col-12 mb-2 mb-md-3">
              <div class="form-floating">
                <select
                  class="form-select"
                  name="supplier"
                  id="editDeviceSupplier"
                  autocomplete="false"
                  disabled
                >
                  <option></option>
                </select>
                <label for="editDeviceSupplier">Proveedor</label>
              </div>
            </div>
            <div class="col-sm-4 col-12 mb-2 mb-md-3">
              <div class="form-floating">
                <select
                  class="form-select"
                  name="type"
                  id="editType"
                  autocomplete="false"
                  disabled
                >
                  <option></option>
                </select>
                <label for="editType">Tipo</label>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12 mb-2 mb-md-3">
              <div class="form-floating">
                <select
                  class="form-select"
                  name="status"
                  id="editStatus"
                  autocomplete="false"
                  required
                >
                  <% status.forEach(value => { %>
                  <option value="<%= value.id %>"><%= value.info %></option>
                  <% }); %>
                </select>
                <label for="editStatus" class="form-label"
                  >Estado: (elige uno):</label
                >
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">
          Cerrar
        </button>
        <button
          type="submit"
          class="btn btn-success"
          form="editForm"
          title="Ten en cuenta que si inhabilitas una clase, esto inhabilitará todos sus dispositivos y tipos de dispositivos."
        >
          Registrar
        </button>
      </div>
    </div>
  </div>
</div>
